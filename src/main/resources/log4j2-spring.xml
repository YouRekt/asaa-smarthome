<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.asaa.logging">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%logger %notEmpty{| %X{area} }@ %simTime] %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
