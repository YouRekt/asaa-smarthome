<configuration>
    <conversionRule conversionWord="simTime"
                    converterClass="org.asaa.util.SimulationTimeConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%simTime][%highlight(%-5level)] [%-15.15X{agent}] [%-10.10X{area}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>